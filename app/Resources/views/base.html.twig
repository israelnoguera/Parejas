<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block titulo %}Home Page{% endblock %}</title>
        
        {% stylesheets
            "@NVParejasBundle/Resources/public/css/*"
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
                   
        {% javascripts
            "@NVParejasBundle/Resources/public/js/jquery/*"
            "@NVParejasBundle/Resources/public/js/*"
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}            
            
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body> 

        {% block bannerback %}
        <div id="banner-back">
            <div class="banner-crop">
                <div class="banner-center">
                    <div class="banner-offset">
                        <div class="banner-img">
                            {% block bannerbackimg %}                            
                            <img src="{{ asset('images/back-style.png') }}" border="0">
                            {% endblock bannerbackimg %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endblock bannerback %}
        
        <div id="mainWrapper">            
            <header>
            {% block header %}
                {% block logo %}<a href="{{ path('home') }}"><img src="/images/logo.gif" class="logo" width="304" height="48" alt="" /></a>{% endblock %}
                {% block mainmenu %}{% include ':templates:mainMenu.html.twig' %}{% endblock %}
                {% block authmenu %}{% include ':templates:authMenu.html.twig' %}{% endblock %}
                {% block search %}{% include ':templates:search.html.twig' %}{% endblock %}
            {% endblock header %}
            </header>
                
            <div id="body">
            {% block body %}                
                BODY                                
            {% endblock body %}         
            </div>
                
            <footer>    
            {% block footer %}                
                FOOTER    
            {% endblock footer %}          
            </footer>                    
        </div>

    </body>
</html>
