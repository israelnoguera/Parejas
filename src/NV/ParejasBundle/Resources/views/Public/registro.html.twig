{% extends '::base.html.twig' %}

{% block body %}
    <h1>Registro</h1>

    {% if( app.session.flash('notice') ) %}
    <div class="notice">
        <p>{{ app.session.flash('notice') }}</p>
    </div>
    {% endif %}

    <form id="registroForm" action="{{ path('registro') }}" method="post" {{ form_enctype(form) }}>
        
        <table>
        
            <tr>
                <td>{{ form_label(form.username) }}</td>
                <td>{{ form_widget(form.username) }}</td>
                <td>{{ form_errors(form.username) }}</td>
            </tr>

            <tr>
                <td>{{ form_label(form.email) }}</td>
                <td>{{ form_widget(form.email) }}</td>
                <td>{{ form_errors(form.email) }}</td>
            </tr>            
            
            <tr>
                <td>{{ form_label(form.perfiles.pais) }}</td>
                <td>{{ form_widget(form.perfiles.pais) }}</td>
                <td>{{ form_errors(form.perfiles.pais) }}</td>
            </tr>
            
            <tr>
                <td>{{ form_label(form.perfiles.provincia) }}</td>
                <td>{{ form_widget(form.perfiles.provincia) }}</td>
                <td>{{ form_errors(form.perfiles.provincia) }}</td>
            </tr>   
            
            <tr>
                <td>{{ form_label(form.perfiles.localidad) }}</td>
                <td>{{ form_widget(form.perfiles.localidad) }}</td>
                <td>{{ form_errors(form.perfiles.localidad) }}</td>
            </tr>             
              
            <tr>
                <td>{{ form_label(form.perfiles.tipo_perfil) }}</td>
                <td>{{ form_widget(form.perfiles.tipo_perfil) }}</td>
                <td>{{ form_errors(form.perfiles.tipo_perfil) }}</td>
            </tr>            
        
            <tr>
                <td>{{ form_label(form.password.first, 'Contraseña') }}</td>
                <td>{{ form_widget(form.password.first) }}</td>
                <td>{{ form_errors(form.password.first) }}</td>
            </tr>
            
            <tr>
                <td>{{ form_label(form.password.second, 'Repetir contraseña') }}</td>
                <td>{{ form_widget(form.password.second) }}</td>
                <td>{{ form_errors(form.password.second) }}</td>
            </tr>
            
            <tr>
                <td>{{ form_label(form.condiciones) }}</td>
                <td>{{ form_widget(form.condiciones) }}</td>
                <td>{{ form_errors(form.condiciones) }}</td>
            </tr> 
            
            <tr>
                <td></td>
                <td><input type="submit" value="Regístrate" /></td>
                <td></td>
            </tr>                 
        
            <tr>
                <td colspan="3">{{ form_errors(form) }}</td>
            </tr>

        </table>
        
    </form>
    
{% endblock body %}